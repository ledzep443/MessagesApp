@page "/changepassword"

<EditForm Model="ChangePasswordRequest" OnValidSubmit="ChangeUserPassword">
    <div class="py-4">
        <div class="row form-group">
            <div class="col-6 offset-3">
                <div class="card border">
                    <div class="card-body px-lg-5 pt-4">
                        <h3 class="col-12 text-warning text-center py-2">
                            Change Password
                        </h3>
                        @if (ShowChangePasswordErrors)
                        {
                            <div>
                                @foreach (var error in Errors)
                                {
                                    <p class="text-danger text-center">@error</p>
                                }
                            </div>
                        }
                        <div class="py-2">
                            <InputText @bind-Value="ChangePasswordRequest.CurrentPassword" class="form-control" placeholder="Current password..." />
                            <ValidationMessage For="(() => ChangePasswordRequest.CurrentPassword)" />
                        </div>
                        <div class="py-2">
                            <InputText @bind-Value="ChangePasswordRequest.NewPassword" class="form-control" placeholder="Enter new password..." />
                            <ValidationMessage For="(() => ChangePasswordRequest.NewPassword)" />
                        </div>
                        <div class="py-2">
                            <InputText @bind-Value="ChangePasswordRequest.ConfirmNewPassword" class="form-control" placeholder="Confirm new password..." />
                            <ValidationMessage For="(() => ChangePasswordRequest.ConfirmNewPassword)" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>


